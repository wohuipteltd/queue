{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "lib": ["es2018", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false
  }
}